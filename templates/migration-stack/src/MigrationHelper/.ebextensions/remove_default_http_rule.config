commands:
  create_post_dir:
    command: "bash /opt/mortha/remove-default-http-rule.sh"
    ignoreErrors: true
files:
  "/opt/mortha/remove-default-http-rule.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
        #!/bin/bash
        EC2_AVAIL_ZONE=$(curl -s http://169.254.169.254/latest/meta-data/placement/availability-zone)
        EC2_REGION=$(echo $EC2_AVAIL_ZONE | sed 's/[a-z]$//')
        EC2_SG=$(curl -s http://169.254.169.254/latest/meta-data/security-groups)
        EC2_SG_ID=$(aws ec2 describe-security-groups --region $EC2_REGION --filters Name=group-name,Values=$EC2_SG --query SecurityGroups[0].GroupId | sed -e 's/^"//' -e 's/"$//')
        aws ec2 revoke-security-group-ingress --region $EC2_REGION  --group-id $EC2_SG_ID --cidr 0.0.0.0/0 --protocol tcp --port 80




