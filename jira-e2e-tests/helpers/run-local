#!/bin/bash -x

jsrc=jira-plugin/target/jira-plugin-1.0.0.jar
jtarget=jira-e2e-tests/jira/jira-plugin-1.0.0.jar

if [[ $jsrc -nt $jtarget ]]; then
    cp $jsrc $jtarget
fi

cd jira-e2e-tests/
docker-compose rm -sf
if [[ "$1" == "--no-test" ]]; then
    docker-compose up --force-recreate --build jira postgresql
else
    docker-compose up --force-recreate --build jira postgresql cypress
fi
